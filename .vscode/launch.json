    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run TS",
            "args": [
                "${file}"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "-r",
                "module-alias/register",
            ],
            "protocol": "inspector",
            "cwd": "${workspaceFolder}/",
            "env": {
                "DEBUG": "*"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Run Mocha",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "${file}",
                "--no-timeouts"
            ],
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "-r",
                "module-alias/register"
            ],
            "env": {
                "DEBUG": "APP:*"
            },
            "console": "integratedTerminal"
        },
    ]
}