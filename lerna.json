{
	"packages": [
		"packages/*"
	],
	"version": "independent",
	"npmClient": "yarn",
	"useWorkspaces": true,
	"command": {
		"publish": {
			"ignoreChanges": [
				"**/test/**",
				"**/*.md"
			],
			"verifyAccess": false,
			"verifyRegistry": false,
			"conventionalCommits": true,
			"message": "chore(release): publish",
			"loglevel": "debug"
		}
	}
}